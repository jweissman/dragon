(function($, global) {
  var scheme   = "<%= @scheme %>";

  var uri      = scheme + window.document.location.host + "/";
  var ws       = null;

  var handleWebsocketMessage = function(message) {
    var data = JSON.parse(message.data);
    var content = data.content;

    $(".content").html(content);

    if ($(".content select").length > 0) {
      $(".button").prop('disabled', false);
    } else {
      $(".button").prop('disabled', true);
    }
  };

  var submitFormOverWebsocket = function(event) {
    event.preventDefault();

    var form = $(".input-form");
    var data = JSON.stringify(form.serializeArray());
    ws.send(data);
  };

  var orchestrateWebsockets = function() {
    ws = new WebSocket(uri);
    ws.onmessage = handleWebsocketMessage;
    $(".input-form").on("submit", submitFormOverWebsocket);
  };

  var init_ws = function() {
    console.log("Welcome to Dragon!");
    orchestrateWebsockets();
  }

